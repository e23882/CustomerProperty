<UserControl x:Class="test.Component.SearchBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:test.Component"
             mc:Ignorable="d" 
             Name="SB"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox Height="30" FontSize="22" FontFamily="TimesNewRoman" Text="{Binding BackgroundText, ElementName=SB}"/>
        <Button x:Name="btSearch" Width="40" HorizontalAlignment="Right" Click="BtSearch_Click">
            <Button.Content>
                <Image Source="image\yee.jpg" Width="20" HorizontalAlignment="Right" Margin="0,0,5,0" Cursor="Help"/>
            </Button.Content>
        </Button>
    </Grid>
</UserControl>
